{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "debug",
			"displayName": "Debug Build",
			"description": "Debug build with optional Tracy profiler",
			"generator": "Ninja",
			"binaryDir": "build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"ENABLE_TRACY": "OFF",
				"ENABLE_UNITY_BUILD": "OFF",
				"CMAKE_C_COMPILER_LAUNCHER": "sccache",
				"CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
			}
		},
		{
			"name": "release",
			"displayName": "Release Build",
			"description": "Release build with optional Tracy profiler",
			"generator": "Ninja",
			"binaryDir": "build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"ENABLE_TRACY": "OFF",
				"ENABLE_UNITY_BUILD": "ON",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
				"CMAKE_C_COMPILER_LAUNCHER": "sccache",
				"CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
			}
		}
	],
	"buildPresets": [
		{
			"name": "debug",
			"configurePreset": "debug",
			"jobs": 0
		},
		{
			"name": "release",
			"configurePreset": "release",
			"jobs": 0
		}
	]
}
